<!-- app/views/documents/index.html.erb -->
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-lg-8">
      <%= flash[:notice] %>
      <div class="card border-0 shadow-sm mt-5 mb-5">
        <div class="card-body">
          <h2 class="card-title text-center">Listing All Documents</h2>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Employee Name</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @documents.each do |document| %>
              <tr>
                <td><%= document.name %></td>
                <td><%= document.doc_type %></td>
                <td><%= link_to document.employee.name, employee_path(document.employee) %></td>
                <td class="mt-2">
                  <%= link_to "Show", document_path(document), class: "btn btn-primary btn-sm" %>
                  <%= link_to "Edit", edit_document_path(document), class: "btn btn-secondary btn-sm" %>
                  <%= link_to "Delete", document_path(document), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm", remote: true %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to "New Document", new_document_path, class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>
