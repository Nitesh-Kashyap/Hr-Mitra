<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-lg-12">
      <%= flash[:notice] %>
      <div class="card border-0 shadow-sm mt-5 mb-5">
        <div class="card-body">
          <h2 class="text-center">Listing All Employees</h2>
        </div>
      </div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Personal Email</th>
            <th>Address</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.personal_email %></td>
            <td><%= employee.full_address %></td>
            <td class="mt-2">
              <div class="dropdown">
                <button class="btn btn-secondary btn-sm dropdown-toggle rounded-0 me-2" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                  Actions
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <li><%= link_to "Show", employee_path(employee), class: "dropdown-item" %></li>
                  <li><%= link_to "Edit", edit_employee_path(employee), class: "dropdown-item" %></li>
                  <li><%= link_to "Delete", employee_path(employee), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "dropdown-item text-danger", remote: true %></li>
                </ul>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "New Employee", new_employee_path, class: "btn btn-primary btn-lg rounded-0" %>
    </div>
  </div>
</div>
